<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field  :title, :size=>40 %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :cols=>"60", :rows=>"8", :class=>"textarea" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>